<h1> Edit Contact</h1>

<%= form_tag "/contacts/#{ @contacts.id }", method: :patch do %>
<div>
First Name: <input type="text" name="first_name" value="<%= @contacts.first_name %>">
</div>

<div>
Middle Name: <input type="text" name="middlename" value="<%= @contacts.middlename %>">
</div>

<div>
Last Name: <input type="text" name="last_name" value="<%= @contacts.last_name %>">
</div>

<div>
email: <input type="text" name="email" value="<%= @contacts.email %>">
</div>

<div>
Phone Number: <input type="text" name="phone_number" value="<%= @contacts.phone_number %>">
</div>

<div>
Bio: <input type="text" name="bio" value="<%= @contacts.bio %>">
</div>

<input type="submit" value="Update Contact">
<% end %>